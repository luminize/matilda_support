<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
<xacro:macro name="matilda" params="prefix">
	<!-- link list -->
	<link name="${prefix}base_link">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://matilda_support/meshes/base_link.stl"/>
			</geometry>
			<material name="matilda_grey">
				<color rgba="0.5 0.5 0.5 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<mesh filename="package://matilda_support/meshes/base_link.stl"/>
			</geometry>
			<material name="red">
				<color rgba="1 0 0 1"/>
			</material>
		</collision>
	</link>
	<link name="${prefix}link_1">
		<visual>
			<origin xyz="-0.2 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_1.stl"/>
			</geometry>
			<material name="matilda_grey">
				<color rgba="0.5 0.5 0.5 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_1.stl"/>
			</geometry>
			<material name="red">
				<color rgba="1 0 0 1"/>
			</material>
		</collision>
	</link>
	<link name="${prefix}link_2">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_2.stl"/>
			</geometry>
			<material name="matilda_grey">
				<color rgba="0.5 0.5 0.5 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_2.stl"/>
			</geometry>
			<material name="red">
				<color rgba="1 0 0 1"/>
			</material>
		</collision>
	</link>
	<link name="${prefix}link_3">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_3.stl"/>
			</geometry>
			<material name="matilda_grey">
				<color rgba="0.5 0.5 0.5 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_3.stl"/>
			</geometry>
			<material name="red">
				<color rgba="1 0 0 1"/>
			</material>
		</collision>
	</link>
	<link name="${prefix}link_4">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_4.stl"/>
			</geometry>
			<material name="matilda_grey">
				<color rgba="0.5 0.5 0.5 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_4.stl"/>
			</geometry>
			<material name="red">
				<color rgba="1 0 0 1"/>
			</material>
		</collision>
	</link>
	<link name="${prefix}link_5">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_5.stl"/>
			</geometry>
			<material name="matilda_grey">
				<color rgba="0.5 0.5 0.5 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<mesh filename="package://matilda_support/meshes/link_5.stl"/>
			</geometry>
			<material name="red">
				<color rgba="1 0 0 1"/>
			</material>
		</collision>
	</link>
	<link name="${prefix}tool0"/>
	<!-- end of link list -->

	<!-- joint list -->
	<joint name="${prefix}joint_1" type="revolute">
		<origin xyz="0 0 0.103" rpy="0 0 0" />
		<parent link="base_link" />
		<child link="link_1" />
		<axis xyz="0 0 -1" />
		<limit lower="-2" upper="2" effort="0" velocity="1.57079632679" />
	</joint>
	<joint name="${prefix}joint_2" type="revolute">
		<origin xyz="0.05 0 0.1" rpy="0 0 0"/>
		<parent link="${prefix}link_1"/>
		<child link="${prefix}link_2"/>
		<axis xyz="0 1 0"/>
		<limit lower="-0.75" upper="2.5" effort="0" velocity="1.57079632679"/>
	</joint>
	<joint name="${prefix}joint_3" type="revolute">
		<origin xyz="0 0 0.615" rpy="0 0 0"/>
		<parent link="${prefix}link_2"/>
		<child link="${prefix}link_3"/>
		<axis xyz="0 -1 0"/>
		<limit lower="-1.4" upper="1.57079632679" effort="0" velocity="1.57079632679"/>
	</joint>
	<joint name="${prefix}joint_4" type="fixed">
		<origin xyz="0.18 0 0.027015" rpy="0 0 0"/>
		<parent link="${prefix}link_3"/>
		<child link="${prefix}link_4"/>
		<axis xyz="0.99737 0 -0.072536"/>
		<!-- <limit lower="-3.2" upper="3.2" effort="0" velocity="1.57079632679"/> -->
	</joint>
	<joint name="${prefix}joint_5" type="revolute">
		<origin xyz="0.37145 0 -0.0270150" rpy="0 0 0"/>
		<parent link="${prefix}link_4"/>
		<child link="${prefix}link_5"/>
		<axis xyz="0 1 0"/>
		<limit lower="-1.57079632679" upper="1.57079632679" effort="0" velocity="1.57079632679"/>
	</joint>
	<joint name="${prefix}joint_5-tool0" type="fixed">
		<parent link="${prefix}link_5"/>
		<child link="${prefix}tool0"/>
		<origin xyz="0 0 0" rpy="0 1.57079632679 0"/>
	</joint>
	<!-- end of joint list -->

	<!-- ROS base_link to Matilda World Coordinates transform -->
	<link name="${prefix}base" />
	<joint name="${prefix}base_link-base" type="fixed">
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<parent link="${prefix}base_link"/>
		<child link="${prefix}base"/>
	</joint>
</xacro:macro>
</robot>
